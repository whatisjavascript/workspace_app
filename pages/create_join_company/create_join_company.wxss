.type-choose {
  padding: 50rpx 50rpx 25rpx;
  overflow: hidden;
}
.create-company-wrap {
  position: relative;
  float: left;
  width: 280rpx;
  height: 280rpx;
  text-align: center;
  border: 5rpx solid #ccc;
  border-radius: 8rpx;
  transition: border, box-shadow .8s;
}
.join-company-wrap {
  position: relative;
  float: right;
  width: 280rpx;
  height: 280rpx;
  text-align: center;
  border: 5rpx solid #ccc;
  border-radius: 8rpx;
  transition: border, box-shadow .8s;
}
.create-company-wrap.active,
.join-company-wrap.active {
  border-color: #1296db;
  box-shadow: 0 0 20rpx 10rpx #e1e1e1;
}
.create-company-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 140rpx;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}
.join-company-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 140rpx;
  height: 140rpx;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}
.type-choose-txt {
  position: relative;
  top: 220rpx;
  font-size: 24rpx;
  color: #666;
}
.create-company-wrap.active .type-choose-txt,
.join-company-wrap.active .type-choose-txt {
  color: #1296db;
}

.form-wrap {
  margin-top: 40rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  font-size: 24rpx;
}
.tip {
  text-align: center;
  color: #999;
}
.form {
  margin-top: 50rpx;
  width: 100%;
}
.form-item {
  padding: 16rpx 20rpx;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  transition: border-color .8s;
}
.form-item.active {
  border-color: #1296db;
}
.form-item:not(first) {
  margin-top: 40rpx;
}
.form-item-icon {
  float: left;
  width: 50rpx;
  height: 50rpx;
}
.form-item input {
  margin-left: 80rpx;
  font-size: 28rpx;
  color: #777;
}
.company-name-icon {
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}
.form-item.active .company-name-icon {
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}

.company-number-icon {
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}

.form-item.active .company-number-icon {
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}
.company-position-icon {
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}

.position-txt {
  margin-left: 80rpx;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 28rpx;
  color: #777;
}

.form-item textarea{
  width: 100%;
  height: 140rpx;
  color: #777;
  font-size: 28rpx;
}

.next-step {
  margin-top: 40rpx;
  color: #fff;
  background-color: #1296db;
}

.auth-alert {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  z-index: 9999;
}
.auth-alert-inner {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 84%;
  height: 300rpx;
  background-color: #fff;
  -webkit-transform: translate3d(-50%, -45%, 0);
  transform: translate3d(-50%, -45%, 0);
  border-radius: 10rpx;
}
.auth-alert-txt {
  padding: 80rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
}
.auth-alert-txt icon {
  position: relative;
  top: 5rpx;
  margin-right: 10rpx;
}
.auth-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border: none;
}