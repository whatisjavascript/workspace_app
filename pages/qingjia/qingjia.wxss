.page-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.info-wrapper {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  padding: 16rpx 30rpx;
  background-color: #fff;
}
.info-item {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.info-item:last-child {
  border-bottom: 0rpx;
}
.picker-view {
  font-size: 32rpx;
  overflow: hidden;
}
.picker-left {
  float: left;
}
.picker-right {
  float: right;
  color: #999;
}
.icon-right {
  position: relative;
  top: 8rpx;
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) center center no-repeat;
  background-size: 100% 100%;
}
.info-title {
  font-size: 32rpx;
}
.info-wrapper > textarea {
  margin-top: 18rpx;
  height: 150rpx;
  font-size: 28rpx;
  width: 100%;
  color: #999;
}
.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  border-color: #1296db;
  color: #fff;
  background-color: #1296db;
  border-radius: 0;
}